#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct node {
	char *question;
	struct node *no;
	struct node *yes;
} node;

int yes_no(char *question)
{
	char answer[3];
	printf("%s? (y/n): ", question);
	fgets(answer, 3, stdin);
	return answer[0] == 'y';
}

node* create(char *question)
{
	node *n = malloc(sizeof(node));
	n->question = strdup(question);
	n->yes = NULL;
	n->no = NULL;
}
